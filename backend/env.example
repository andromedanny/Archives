# Database Configuration
# Option 1: Use connection string (for Supabase, PlanetScale, Railway)
# Supabase: postgresql://postgres:password@db.project-ref.supabase.co:5432/postgres
# MySQL: mysql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@db.project-ref.supabase.co:5432/postgres

# Option 2: Use individual parameters
# Database Type: 'postgres' for Supabase, 'mysql' for MySQL
DB_TYPE=postgres
DB_HOST=db.project-ref.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your_password

# SSL Configuration (Supabase requires SSL, set to true)
DB_SSL=true

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Sync (set to 'true' to enable automatic table sync on startup)
# Disabled by default to reduce console output - enable only when needed
ENABLE_SYNC=false

# HTTP Logging (set to 'true' to enable HTTP request logging)
# Disabled by default to reduce console output
ENABLE_HTTP_LOGGING=false

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Backend URL (for file URLs)
BACKEND_URL=http://localhost:5000

# File Storage Configuration
# Options: 'local', 'supabase', 's3', 'cloudinary', 'blob'
# Recommended for free hosting: 'supabase' (1GB free storage)
STORAGE_TYPE=supabase

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name

# Supabase Storage Configuration (FREE - 1GB free tier, recommended)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_STORAGE_BUCKET=thesis-documents

# Cloudinary Configuration (if using Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

